{
  "name": "platform-coop-toolkit/learning-commons-framework",
  "type": "wordpress-plugin",
  "description": "Framework for the Platform Cooperativism Learning Commons.",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "OCAD University",
      "email": "platform-coop-development-kit@lists.inclusivedesign.ca"
    }
  ],
  "require": {
    "php": ">=7.3",
    "afragen/wp-dependency-installer": "^2.0",
    "cmb2/cmb2": "^2.6",
    "composer/installers": "^1.7",
    "johnbillion/extended-cpts": "^4.2",
    "umpirsky/country-list": "^2.0"
  },
  "require-dev": {
    "10up/phpcs-composer": "dev-master",
    "10up/wp_mock": "dev-master",
    "phpunit/phpunit": "^8.4"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "vendor/cmb2/cmb2/": [
        "cmb2/cmb2"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "LearningCommonsFramework\\": "includes/classes/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "acceptance": "wpacceptance run",
    "lint": "phpcs .",
    "lint-fix": "phpcbf .",
    "test": [
      "@acceptance",
      "phpunit"
    ]
  }
}
